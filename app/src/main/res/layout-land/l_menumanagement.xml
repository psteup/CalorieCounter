<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/menumanagement"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/headline"
              android:text="@string/titel"
              android:textSize="@dimen/headline"
              android:textColor="@color/white"
              android:gravity="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/menumanagement_menumanagement"
              android:textColor="@color/black"
              android:textSize="@dimen/textsize"
              android:gravity="center"
              android:textStyle="italic"
              android:layout_margin="@dimen/headlinespace"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="@string/menumanagement_name"
                  android:textColor="@color/black"
                  android:layout_marginTop="@dimen/margin"
                  android:layout_marginLeft="@dimen/margin"
                  android:layout_marginRight="@dimen/margin"/>

        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:id="@+id/idMenuManagementSelectMenuName"
                  android:layout_marginTop="@dimen/margin"
                  android:layout_marginRight="@dimen/margin"
                  android:maxLength="32"
                  android:text="@string/menumanagement_newNameInput"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/gray"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="@string/menumanagement_portion"
                  android:textColor="@color/black"
                  android:layout_marginTop="@dimen/margin"
                  android:layout_marginLeft="@dimen/margin"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/idMenuManagementSelectPortionSize"
                  android:layout_marginTop="@dimen/margin"
                  android:layout_marginRight="@dimen/margin"
                  android:text="@string/menumanagement_newPortionInput"
                  android:maxLength="16"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/plus_32"
                   android:layout_margin="@dimen/margin"
                   android:id="@+id/idMenuManagementAddNewGrocery"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/menumanagement_newGroceryInput"
                  android:textSize="@dimen/textsize"
                  android:maxLength="32"
                  android:id="@+id/idMenuManagementAddedGrocery"
                  android:textColor="@color/gray"
                  android:layout_margin="@dimen/margin"/>

    </LinearLayout>

    <ListView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/idMenuMangementList">
    </ListView>

        <Button android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/menumanagement_addMenu"
                android:layout_gravity="end"
                android:id="@+id/idMenuManagementAddMenu"/>
    </LinearLayout>

