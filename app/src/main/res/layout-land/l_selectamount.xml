<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idSelectAmount"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/headline"
        android:text="@string/titel"
        android:textSize="@dimen/headline"
        android:textColor="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/idSelectAmountPickedGrocery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectamount_default_pickedgrocery"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_margin="@dimen/headlinespace"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:text="@string/selectamount_amount_name"
            android:textColor="@color/black"
            android:textSize="@dimen/inputTextSize"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/idSelectAmountSelectedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/selectamount_amount"
            android:textSize="@dimen/inputTextSize"
            android:textColor="@color/gray"
            android:background="@color/gray2"
            />

        <Spinner
            android:id="@+id/idSelectAmountSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/selectamount_default_spinnerstatus"
            android:layout_marginTop="@dimen/margin"
            />
    </LinearLayout>

    <Button
        android:id="@+id/idSelectAmountAddAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectamount_accept"
        android:layout_margin="@dimen/margin"
        android:layout_gravity="end"
        />
</LinearLayout>