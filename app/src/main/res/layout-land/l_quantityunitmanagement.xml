<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/quantityunitmanagement"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/headline"
              android:text="@string/titel"
              android:textSize="@dimen/headline"
              android:textColor="@color/white"
              android:gravity="center"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/quantityunitmanagement_quantityunitmanagement"
              android:textColor="@color/black"
              android:textSize="@dimen/textsize"
              android:gravity="center"
              android:textStyle="italic"
              android:layout_margin="@dimen/headlinespace"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ListView android:layout_width="wrap_content"
                  android:layout_height="260dp"
                  android:id="@+id/idListQuantityUnitManagement">
        </ListView>

    </LinearLayout>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/idQuantityUnitManagementAddNewQuantityUnit"
               android:src="@drawable/plus_32"
               android:layout_margin="@dimen/margin"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idQuantityUnitManagementQuantityName"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>
